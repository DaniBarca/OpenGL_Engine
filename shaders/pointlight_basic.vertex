#version 330 core

layout(location = 0) in vec3 vertex_modelspace;
layout(location = 1) in vec3 normal_modelspace;

uniform mat4 PVM;

out vec3 fragment_normal;
out vec3 fragment_position;

void main(){
	fragment_position = vec3(PVM * vec4(vertex_modelspace,1));
    gl_Position = vec4(fragment_position,1.0f);

	fragment_normal = normal_modelspace;

}